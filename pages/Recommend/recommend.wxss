.container{
  height: 100%;
}
.restaurantList{
  width: 100%;
  padding: 15rpx;
  border: 100rpx 0;
  border-style: solid;
  border-color: #63B8FF;
}
.restaurant-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
}
.restaurant-title-restaurantName{
  width: 200rpx;
  height: 100%;
  font-size: 30rpx;
}
.restaurant-content{
  height: 200rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC; 
}
.restaurant-content-restaurantImg{
  width: 200rpx;
  height: 170rpx;
}
.restaurant-content-info{
  font-size: 25rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.restaurant-content-info-address,.restaurant-content-info-business,restaurant-content-info-intro,.restaurant-content-info-telephone{
  height: 42rpx;
  line-height: 42rpx;
  margin-left: 30rpx;
}

.restaurant-footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
}
.restaurant-go{
  margin-bottom: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
  margin-right: 40rpx;
  background: #5CACEE
}

